pipeline {
    agent any

    environment {
        APP_NAME = "resume-matching-app"
    }

    stages {

        stage('SCM Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/bhadri-Raj-T/Resume-job-matching.git'
            }
        }

        stage('Build') {
            steps {
                echo 'Building the application...'
            }
        }

        stage('Code Analysis') {
            steps {
                echo 'Running static code analysis...'
                // SonarQube example
                // sh 'mvn sonar:sonar'
            }
        }

        stage('Automated Testing') {
            steps {
                echo 'Running test cases...'
                bash 'mvn test || pytest'
            }
        }

        stage('Deployment') {
            steps {
                echo 'Deploying application...'
                // Docker / Kubernetes / EC2 deploy
                bash 'docker-compose up -d'
            }
        }
    }
    stage('Docker Build') {
    steps {
        bash 'docker build -t resume-matcher-backend .'
    }
}

stage('Docker Run') {
    steps {
        bash 'docker run -d -p 5000:5000 resume-matcher-backend'
    }
}

    post {
        success {
            echo 'Pipeline executed successfully!'
        }
        failure {
            echo 'Pipeline failed. Check logs.'
        }
    }
}


